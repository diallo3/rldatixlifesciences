<!DOCTYPE html>
<html lang="en" class="page-{{ page.fileSlug }} {{ tagString }} scroll-smooth ">
	<head>
		<!-- Base meta tags -->
		<meta charset="{{ site.charset }}">
		<title>{{ site.title }}</title>
		<meta name="language" content="english" />
		<meta name="description" content="{{ site.description }}" />
		
		<!-- Reassure the browser that we are mobile-friendly -->
		<meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
		<meta name="viewport" content="width=device-width, minimum-scale=1, initial-scale=1">
		<meta name="HandheldFriendly" content="True">
		<meta name="view-transition" content="same-origin" />

		<!-- Favicons 
		<link rel="icon" href="/assets/favicon/favicon.ico?cachebust=20220519">
		<link rel="icon" href="/assets/favicon/favicon.svg?cachebust=20220519" type="image/svg+xml" sizes="any">
		<link rel="apple-touch-icon" href="/assets/favicon/favicon-apple.png?cachebust=20220519">
		<meta name="theme-color" content="#20242c"> -->
		
		{{function('wp_head')}}

		{% if post.meta('css') %}
			<style>{{ post.meta('css') }}</style>
		{% endif %}

		{% block head %}
		{% endblock %}

	</head>

	<body 
        x-init="console.log('Im initing')"
        class="{{ body_class }} bg-wood-smoke-950 text-white font-sans relative ">

        <div class="relative overflow-clip">

        <div class="absolute -top-96 left-20 rounded-full size-[50rem] bg-gradient-to-t from-black-rock-900 to-transparent blur-3xl opacity-30"></div>
            {% block alert %}
                {% for alert in alerts %}
                    {% include 'components/alert/alert.twig' %}
                {% endfor %}
            {% endblock %}


            {% block header %}
                {% include 'partials/_partial-header.twig' %}
            {% endblock %}


            <main id="Swup" class="pt-24 layout transition-fade" role="main">
                {% block content %}
                    Sorry, no content
                {% endblock %}
            </main>

            {% block footer %}
                {% include 'partials/_partial-footer.twig' %}
            {% endblock %}
        </div>

        

		{{ function('wp_footer') }}

		{% if post.meta('js') %}
			<script>{{ post.meta('js') }}</script>
		{% endif %}	
		
	</body>
</html>
