{% extends "layouts/base.twig" %}

{% set hero =  post.meta('page_hero')[0] %}
{% set heroTitle = hero.title %}
{% set heroSubTitle = hero.sub_title %}
{% set heroEntry = hero.entry %}
{% set heroCTAs  = hero.call_to_actions[0] %}
{% set heroImage = hero.image %}

{% set heroSimple =  post.meta('page_hero_simple')[0] %}
{% set heroSimpleAccent = heroSimple.accent %}
{% set heroSimpleTitle = heroSimple.title %}
{% set heroSimpleEntry = heroSimple.entry %}

{% set pageContent = post.meta('page_content') %}
{% set callToAction = post.meta('call_to_action')[0] %}

{% set generalTitle = title ?? options.general_call_to_action.title %}
{% set generalEntry = entry ?? options.general_call_to_action.entry %}
{% set generalLink = link ?? options.general_call_to_action.link %}
{% set generalFormTitle = formTitle ? formTitle : options.general_call_to_action.hubspot_form_title %}
{% set generalFormID = form ? form : options.general_call_to_action.hubspot_form_id %}

{% block content %}

    {% embed "/templates/components/containers/pages/_embed-page-title.twig" %}
        {% block page_content %}
            {% import "components/ui/_macro-heading.twig" as headings %}
            {% import "components/ui/_macro-image-object.twig" as images %}
            {% import "components/ui/_macro-icon.twig" as icons %}
            {% import "components/ui/_macro-badge.twig" as badges %}
            {% import "components/ui/_macro-button.twig" as buttons %}

            {% set address = options.address %}
            <div class="container relative px-4 pb-20 mx-auto lg:px-8 xl:max-w-7xl">
                
                <div
                    class="flex flex-col gap-16 lg:flex-row lg:items-center">
                    <!-- Heading with Company Info -->
                    <div class="space-y-4 lg:w-2/5">
                        {# <div class="mb-1 text-sm font-bold tracking-wider text-blue-600 uppercase dark:text-blue-500">
                            We reply in 24hrs
                        </div> #}

                        {{ badges.accentBadge({
                            title: 'Get In Touch',
                            size: 'fluid-text-3xl',
                        })}}

                        <div class="pb-8 space-y-6 border-b contact-block__summary border-dodger-blue-900">
                            {{ headings.headingTwo({
                                title: 'Speak to one of our experts today.',
                                size: 'fluid-text-3xl',
                            })}}
                            <div class="prose sm:prose-lg prose-invert opacity-85">
                               {{ options.company_summary}}
                            </div>
                        </div>

                        <div class="contact-block__info">
                            <h4 class="mt-10 mb-4 font-semibold tracking-wider uppercase">
                                {{ site.title }}
                            </h4>
                            <div class="flex flex-col leading-relaxed opacity-70">
                                <div class="inline-block">{{ address.street_address }}</div>
                                <div class="flex space-x-1">
                                    <span class="inline-flex">{{ address.city }}</span>,
                                    <span class="inline-flex">{{ address.state_province_region }}</span>
                                   <span class="inline-flex"> {{ address.postal_zip_code }}</span>
                                </div>
                                <div class="mt-6">
                                    {% for item in options.phone %}
                                         <div class="flex space-x-4">
                                            <abbr title="Phone" class="no-underline">{{ item.type }}:</abbr> <a href="tel:{{ item.phone_number.number }}" class="font-semibold text-dodger-blue-500">{{ item.phone_number.national }}</a>
                                        </div>
                                    {% endfor %}
                                </div>
                            
                            </div>
                        </div>
                    </div>
                    <!-- END Heading with Company Info -->

                    <!-- Contact Form -->
                    <div class="flex flex-col mx-auto lg:pl-8 lg:w-2/3 ">
                        <div class="px-8 py-6 overflow-hidden border-2 rounded-lg shadow-sm lg:py-8 border-dodger-blue-950/60 bg-wood-smoke-950/80 ">
                            <script charset="utf-8" type="text/javascript" src="//js.hsforms.net/forms/embed/v2.js"></script>
                            <script>
                            hbspt.forms.create({
                                region: "na1",
                                portalId: "6118984",
                                formId: "b94b3a22-ceba-4a62-9684-27a3484e6d81",
                                css:""
                            });
                            </script>
                        </div>
                    </div>
                    <!-- END Contact Form -->
                </div>
            </div>
        {% endblock %}
    {% endembed %}

{% endblock %}


    