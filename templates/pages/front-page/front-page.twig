{% extends "layouts/base.twig" %}


{% set pageContent = post.meta('page_content') %}
{% block content %}

<article class="page-content snap-y">


    {% import "/templates/components/ui/_macro-image-object.twig" as images %}
    {% import "/templates/components/ui/_macro-badge.twig" as badges %}
    {% import "/templates/components/ui/_macro-heading.twig" as headings %}
    {% import "/templates/components/ui/_macro-button.twig" as buttons %}
    {% import "/templates/components/ui/_macro-icon.twig" as icons %}

    <!-- Hero -->
    {% set hero = post.meta('page_hero')[0] %}

    {% include "/templates/pages/page/partials/_partial-hero-full-background.twig"  with {
        heroAccent: hero.accent,
        heroTitle: hero.title,
        heroSubTitle: hero.sub_title,
        heroImage: hero.image,
        heroCTAs: hero.call_to_actions,
    
    } %}
    <!-- End Hero -->

    {% set companyBrands = [
        {
            name: 'iContracts',
            icon: 'brand-icontracts'
        },
        {
            name: 'Porzio',
            icon: 'brand-porzio'
        },
        {
            name: '',
            icon: 'brand-icoach'
        },
    ] %}

    <!-- Brands -->
    <section class="relative px-16 section-brands lg:px-8 scroll-start">
            <div class="absolute top-0 -inset-x-8 -bottom-3/4 opacity-90 ">
                <svg width="1440" height="2035" class="size-full" viewBox="0 0 1440 2035" fill="none" xmlns="http://www.w3.org/2000/svg">
                <ellipse cx="714" cy="1017.5" rx="1000" ry="1017.5" fill="url(#paint0_radial_296_549)" fill-opacity="0.8"/>
                <defs>
                    <radialGradient id="paint0_radial_296_549" cx="0" cy="0" r="1" gradientUnits="userSpaceOnUse" gradientTransform="translate(714 1017.5) rotate(90) scale(1017.5 1000)">
                    <stop stop-color="#1B3262" stop-opacity="0.6"/>
                    <stop offset="1" stop-color="#1B3262" stop-opacity="0"/>
                    </radialGradient>
                </defs>
                </svg>
            </div>
            <div class="relative mx-auto space-y-8 lg:max-w-7xl page-content__item">

                {# divider #}
                <div class="mb-20 -mx-12 section-divider lg:mx-auto">
                    {% include "/templates/components/dividers/_component-divider-icon.twig" %}
                </div>

                <div class="pt-12 pb-8 section-brands__entry sm:px-20 lg:pb-16">
                    <div class="pt-12 space-y-6 text-center md:space-y-10 lg:space-y-12 section-brands__header inview-container">
                    
                        <div class="section-brands__item">
                            {{ headings.headingThree({
                                title: 'Brands Coming Together',
                                font: 'font-montserrat',
                                size: 'fluid-text-sm  uppercase',
                            })}}
                        </div>
                        <!-- Brands Logo -->
                        <div class="max-w-xs mx-auto lg:max-w-md section-brands__logo section-brands__item brand__rldatix ">
                            {{ icons.icon('brand', 'w-full') }}
                        </div>
                    </div>
                    <div class="flex flex-col items-center gap-3 px-12 mx-auto mt-8 text-center lg:max-w-7xl sm:px-10 md:flex-row md:w-full section-brands__content md:px-0">
                        <div class="relative hidden px-12 lg:block text-dodger-blue-900/60">
                            {{ icons.icon('brand-glyph', 'w-12') }}
                        </div>

                        {% for item in companyBrands %}
                            <div class="relative flex justify-center align-middle size-full max-w-80 text-dodger-blue-800/60 section-brands__item brand__icoach">
                                <div class="absolute rounded-full opacity-50 inset-6 bg-gradient-to-t from-wood-smoke-950 to-transparent blur-xl"></div>
                                <div class="z-10">{{ icons.icon('hexagon', 'absolute inset-0') }}</div>
                                <figure class="absolute inset-0 flex items-center justify-center px-8 py-4 lg:px-16" >
                                    <figcaption class="sr-only">{{ item.name }}</figcaption>
                                    {{ icons.icon(item.icon, 'w-full max-w-40') }}
                                </figure>
                            </div>
                        {% endfor %}
                    
                    
                       <div class="relative hidden px-12 lg:block text-dodger-blue-950/60">
                            {{ icons.icon('brand-glyph', 'w-12') }}
                        </div>
                    </div>
                </div>
            </div>
    </section>


    {% set logos = {
            title: 'Our Partners',
            items: [
                {
                    title: 'amagen',
                    link: '#',
                    image: 'img-logo-amgen.png'
                },
                {
                    title: 'astrazeneca',
                    link: '#',
                    image: 'img-logo-astrazeneca.png'
                },
                {
                    title: 'exelixis',
                    link: '#',
                    image: 'img-logo-exelixis.png'
                },
                {
                    title: 'genetech',
                    link: '#',
                    image: 'img-logo-genetech.png'
                },
                {
                    title: 'genetech',
                    link: '#',
                    image: 'img-logo-bausch-and-lomb.png'
                },
                {
                    title: 'amagen',
                    link: '#',
                    image: 'img-logo-amgen.png'
                },
                {
                    title: 'astrazeneca',
                    link: '#',
                    image: 'img-logo-astrazeneca.png'
                },
                {
                    title: 'exelixis',
                    link: '#',
                    image: 'img-logo-exelixis.png'
                },
                {
                    title: 'genetech',
                    link: '#',
                    image: 'img-logo-genetech.png'
                },
                {
                    title: 'genetech',
                    link: '#',
                    image: 'img-logo-bausch-and-lomb.png'
                },
            ]
        }
    %}

    <section class="hidden px-12 py-8 lg:px-8 lg:py-44">
        <div class="mx-auto max-w-7xl">
            <div class="swiper logos-swiper">
            <div class="swiper-wrapper">
                {% for item in logos.items %}
                    <div class="flex items-center justify-center px-2 h-36 swiper-slide">
                        <img src="{{theme.link}}/public/img/{{ item.image }}" alt="{{ item.name }}" class="w-full">
                    </div>
                {% endfor %}
            </div>
            </div>
        </div>
    </section>

    <div class="relative page-content__entry">  
        
        {% include "partials/content/_partial-content.twig" %}
        
    </div>

    {% include "partials/_partial-call-to-action.twig" with {
        title: callToAction.title,
        entry: callToAction.entry,
        link: callToAction.link,
    } %}

</article>

{% endblock %}