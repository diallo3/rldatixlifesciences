{% extends "layouts/base.twig" %}

{% block content %}


{% import "/templates/components/ui/_macro-image-object.twig" as images %}
{% import "/templates/components/ui/_macro-badge.twig" as badges %}
{% import "/templates/components/ui/_macro-heading.twig" as headings %}
{% import "/templates/components/ui/_macro-button.twig" as buttons %}
{% import "/templates/components/ui/_macro-icon.twig" as icons %}

<!-- Hero -->
<section class="relative overflow-hidden">
	<div class="px-4 py-10 mx-auto max-w-screen-2xl sm:px-6 lg:px-8">
		<div class="mx-auto text-center max-w-7xl">

            {{ badges.accentBadge({
                title: 'operational excellence',
            })}}

			<div class="mt-8 space-y-6">
                {{ headings.displayHeadingOne({
                                title: 'Compliance. Clarity. Control.',
                })}}
    
                {{ headings.headingThree({
                    title: 'Redefining risk and optimizing outcomes with RLDatix Life Sciences.',
                    color: 'text-dodger-blue-700',
                    size: 'fluid-text-lg',
    
                })}}
            </div>

		</div>

		<div class="relative mx-auto mt-10 max-w-7xl">
            <div class="relative">
                <div class="absolute inset-0 p-4 overflow-hidden rounded-md bg-wood-smoke-900 blur-lg"></div>
                <div class="rounded-md aspect-w-16 aspect-h-8 bg-wood-smoke-950 isolate"></div>
            </div>
		</div>

        <div class="relative max-w-6xl mx-auto mt-10 prose-xl text-center">
            <p>RLDatix Life Sciences leads the charge in empowering organizations to master complexity, mitigate risk, and soar beyond the standards of compliance and efficiency — from sales to pricing to reporting. We provide the control that is your competitive edge, offering operational excellence with unmatched precision and reliability.</p>
        </div>

        <div class="mx-auto mt-8 text-center">
            {{ buttons.btnLink({
                text: 'Tour the Platform',
                link: item.link,
                type: 'primary',
                icon: 'arrow-right',
                size: 'lg'
            })}}
        </div>
	</div>
</section>
<!-- End Hero -->

<!-- Brands -->
<section class="relative py-56 section-brands">
        <div class="relative max-w-5xl mx-auto space-y-8">

            <div class="space-y-6 text-center section-brands__header">
               {{ badges.accentBadge({
                    title: 'Saas Solution',
                })}}
                
                {{ headings.headingThree({
                    title: 'Brands Coming Together',
                })}}
            </div>

            <div class="gap-1 lg:flex lg:items-center lg:w-full section-brands__content">
                <div class="relative text-black-rock-950">
                    {{ icons.icon('brand-glyph', 'w-12') }}
                </div>
                <div class="relative flex justify-center align-middle size-full text-black-rock-800">
                    {{ icons.icon('hexagon', 'absolute inset-0') }}
                    <figgure class="absolute inset-0 flex items-center justify-center">
                        <img src="{{ theme.link }}/public/img/img-logo-icoach.png" class="w-full max-w-44" alt="">
                    </figgure>
                </div>
                <div class="relative text-4xl font-bold text-dodger-blue-800">+</div>
                <div class="relative flex justify-center align-middle size-full text-black-rock-800">
                     {{ icons.icon('hexagon', 'absolute inset-0') }}
                     <figgure class="absolute inset-0 flex items-center justify-center">
                        <img src="{{ theme.link }}/public/img/img-logo-porzio.png" class="w-full max-w-44" alt="">
                    </figgure>
                </div>
                <div class="relative text-4xl font-bold text-dodger-blue-800">+</div>
                <div class="relative flex justify-center align-middle size-full text-black-rock-800">
                     {{ icons.icon('hexagon', 'absolute inset-0') }}
                     <figgure class="absolute inset-0 flex items-center justify-center">
                        <img src="{{ theme.link }}/public/img/img-logo-icontracts.png" class="w-full max-w-44" alt="">
                    </figgure>
                </div>
                <div class="relative text-black-rock-950">
                     {{ icons.icon('brand-glyph', 'w-12') }}
                </div>
            </div>

            <!-- Brands Logo -->
            <div class="w-64 mx-auto section-brands__logo">
                {{ icons.icon('brand', 'w-full') }}
            </div>
        </div>
</section>
<!-- End Brands -->

{% set features = [
    {
        icon: 'technology',
        title: 'Leading-Edge Technology',
        description: 'Elevate your operational game with our cutting-edge SaaS platforms. Boost efficiency, optimize user experience, and drive exceptional outcomes.'
    },
    {
        icon: 'shield',
        title: 'Expertise at your Service',
        description: 'Our experts are the strategic assist you need. From compliance to commercialization, we can be your extra hands and secret weapon for operational success..'
    },
    {
        icon: 'support',
        title: 'Dedicated Customer Support',
        description: 'A comprehensive customer care and support ecosystem that ensures you have the support you need whenever you need it.'
    }
] %}


<section class="relative px-6 py-20 lg:px-8">
    <div class="max-w-xl mx-auto lg:max-w-7xl">
        <dl class="grid grid-cols-1 gap-16 lg:grid lg:grid-cols-3">
            {% for item in features %}
            <div>
                <dt>
                    <div class="flex items-center justify-center size-10 text-dodger-blue-600 rounded-xl">
                        {{ icons.icon(item.icon, 'size-full') }}
                    </div>
                    <p class="mt-6 font-semibold leading-8 tracking-tight text-gray-100 fluid-text-lg">{{ item.title }}</p>
                </dt>
                <dd class="mt-8 text-base leading-7 text-gray-300">
                    {{ item.description }}
                </dd>
            </div>
            {% endfor %}
        </dl>
    </div>
</section>


