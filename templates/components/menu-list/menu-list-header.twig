{% set level = level + 0 %}

<menu class="menu-list flex items-center space-x-4 lg:space-x-8 {{ name }}" data-level="{{ level }}">
    
	{% for item in items %}
        <script>console.log({{ item.meta('mega_menu_item') | json_encode | raw }})</script>
		<li 
            x-data="{ 
                open: false 
            }"
            @mouseenter="open = true"
            @mouseleave="open = false"
            :class="scrolledFromTop ? ' py-8' : 'py-16'"
            class="font-semibold {{ item.classes|join(', ') }} menu-list-item py-8 group relative text-black-rock-100/80 transition-all duration-500 ease-in-out"
        >
			{% if item.link == '#' %}
				<button class="menu-link flex space-x-1.5 text-sm":aria-expanded="open" >
					{% include "/templates/components/menu-list/menu-text.twig" %}
				</button>
			{% else %}
				<a href="{{ item.link }}" 
                    class="flex items-center space-x-1.5 text-sm transition duration-150 ease-linear menu-link hover:text-white" 
                    target="{{ item.target }}"
                    :aria-expanded="open"
                >
                    {% include "/templates/components/menu-list/menu-text.twig" %}
                </a>
			{% endif %}

            {% if item.meta('mega_menu_item') %}
                {% if item.children  %}
                <div 
                    class="origin-top-right absolute top-[80%] left-1/2 -translate-x-1/2 min-w-[240px] bg-wood-smoke-900 border border-wood-smoke-900 p-2 text-left rounded shadow-xl [&[x-cloak]]:hidden z-50"
                    x-show="open"
                    x-transition:enter="transition ease-out duration-200 transform"
                    x-transition:enter-start="opacity-0 -translate-y-2"
                    x-transition:enter-end="opacity-100 translate-y-0"
                    x-transition:leave="transition ease-out duration-200"
                    x-transition:leave-start="opacity-100"
                    x-transition:leave-end="opacity-0"
                    x-cloak
                    @focusout="await $nextTick();!$el.contains($focus.focused()) && (open = false)"
                   data-level="{{ level + 1 }}"
                >
                    <menu class="flex gap-12 px-4 py-2">
                        {% for item in item.children %}
                            <li class="{{ item.classes.join('') }} relative min-w-36 space-y-2">
                                <a href="{{ item.link }}" class="block py-0.5 text-gray-100 transition duration-150 ease-in-out border-b whitespace-nowrap border-wood-smoke-900 hover:text-white">{{ item.title }}</a>
                                <ul class="flex-none text-sm">
                                    {% for child in item.children %}
                                        <li><a href="{{ child.link }}" class="block py-1 font-light">{{ child.title }}</a></li>
                                    {% endfor %}
                                    
                                </ul>
                            </li>
                        {% endfor %}

                    </menu>
                    
                </div>
                {% endif %}
            {% else %}
                {% if item.children  %}
				{# {% include 'components/menu-list/menu-list-header.twig' with {'items': item.children} %} #}
                 <menu 
                    class="origin-top-right absolute top-[80%] left-1/2 -translate-x-1/2 min-w-[240px] bg-wood-smoke-950 border border-wood-smoke-900 p-2 text-left rounded-lg shadow-xl [&[x-cloak]]:hidden z-50"
                    x-show="open"
                    x-transition:enter="transition ease-out duration-200 transform"
                    x-transition:enter-start="opacity-0 -translate-y-2"
                    x-transition:enter-end="opacity-100 translate-y-0"
                    x-transition:leave="transition ease-out duration-200"
                    x-transition:leave-start="opacity-100"
                    x-transition:leave-end="opacity-0"
                    x-cloak
                    @focusout="await $nextTick();!$el.contains($focus.focused()) && (open = false)"
                   data-level="{{ level + 1 }}"
                >

                    {% for child in item.children %}
                        <li class="{{ child.classes.join(', ') }}">
                            <a href="{{ child.link }}">{{ child.title }}</a>
                            
                        </li>
                    {% endfor %}
                </menu>
			{% endif %}
            {% endif %}

            
			
		</li>
	{% endfor %}
</menu>