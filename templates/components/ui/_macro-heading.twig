{# Heading One #}
{% macro headingOne(options=[]) %}

    {% set options = {
        title: 'Heading One',
        color: 'text-gray-900',
        case: case | default('uppercase')
    } | merge(options)  %}

    {% set headingOptions = options.color ~ ' ' ~ options.size ~ ' ' ~ options.case %}

    <h1 class="{{ headingOptions }} text-3xl lg:text-5xl font-semibold tracking-tighter font-alexandria">{{ options.title }}</h1>
{% endmacro %}

