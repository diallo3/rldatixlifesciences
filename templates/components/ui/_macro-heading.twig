{% macro displayHeadingOne(options={}) %}
    {% set options = {
        title: 'Heading Display',
        color: 'text-white',
        size: size | default('fluid-text-6xl'),
        case: case
    } | merge(options)  %}

    {% set headingOptions = options.color ~ ' ' ~ options.size ~ ' ' ~ options.case %}

    <h1 class="{{ headingOptions }} font-montserrat font-semibold">{{ options.title }}</h1>
{% endmacro %}

