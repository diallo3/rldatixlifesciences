{% macro imageObject(options=[]) %}
    {% set options = {
        src: src | towebp,
        fit: fit | default('object-cover !w-full !h-full'),
        alt: alt ? alt : 'Image alt text',
    } | merge(options)  %}

    {# Image #}
    <img data-src="{{ options.src }}" class="{{ options.fit }} lazyload" alt="{{ options.alt }}" loading="lazy">
{% endmacro %}