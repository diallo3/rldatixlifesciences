{% import "components/ui/_macro-icon.twig" as icons %}
{% import "components/ui/_macro-badge.twig" as badges %}
{% import "components/ui/_macro-button.twig" as btn %}
{% import "components/ui/_macro-image-object.twig" as images %}

{% set front = fn('is_front_page') %}

<div class="relative overflow-hidden border-2 rounded-md bg-wood-smoke-950 border-blue-900/40" >
    <div class="py-12 bg-top bg-no-repeat bg-cover lg:py-32" style="background-image: url('{{ image.url ?: theme.link ~ '/public/img/img-glow-blue.png'}}')">
    {# <div class="absolute inset-x-0 w-[120%] h-full rounded-full -translate-x-1/3 -bottom-1/2 bg-gradient-to-t from-wood-smoke-800 to-transparent blur-3xl left-1/2"></div> #}

    <div class="absolute -inset-2 bg-[#090C36]/20 mix-blend-hard-light"></div>
        <div class="absolute inset-y-0 bottom-0 w-3/4 bg-gradient-to-r from-wood-smoke-950 via-wood-smoke-950/70 to-transparent"></div>
        <div class="relative px-6 pb-8 mx-auto md:px-12 lg:px-24 lg:pb-0">
            <div class="relative max-w-sm {{ front ? 'lg:max-w-md xl:max-w-lg' : 'lg:max-w-6xl xl:max-w-4xl' }} ">
                <div class="col-span-2 space-y-4 lg:pr-8 lg:pt-4">
                    <span class="inline-flex text-flamingo-600">{{ icons.icon('brand-glyph', 'size-6') }}</span>
                    <div class="space-y-4 lg:pr-3">
                        <p class="mt-2 text-3xl font-bold text-white uppercase whitespace-break-spaces font-montserrat sm:fluid-text-3xl">{{ title }}</p>
                        <div class="prose fluid-prose-sm prose-invert {{ front ?: 'max-w-3xl' }} ">{{ entry }}</div>
                    </div>
                    <div class="pt-8">
                        {{ btn.btnLink({
                            text: link.title,
                            link: link.url,
                            type: 'primary',
                            icon: 'arrow-right',
                        })}}
                    </div>
                </div>
                
            </div>
        </div>

    </div>
</div>