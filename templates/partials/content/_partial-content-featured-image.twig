{% embed "/templates/components/containers/sections/_component-section-full.twig" with {
    id: 'section-content-' ~ loop.index,
    class: 'feature-with-image',
} %}
    {% block section_content %}
        {% import "components/ui/_macro-heading.twig" as headings %}
        {% import "components/ui/_macro-image-object.twig" as images %}
        {% import "components/ui/_macro-icon.twig" as icons %}
        {% import "components/ui/_macro-badge.twig" as badges %}
        {% import "components/ui/_macro-button.twig" as btn %}
        <div class="absolute -top-72 {{ loop.index is even ? 'left-20 ' : 'right-20 ' }} rounded-full size-[50rem] bg-gradient-to-t from-black-rock-900 to-transparent blur-3xl opacity-20"></div>
        <div class="flex flex-col gap-12  xl:items-center relative xl:gap-16 {{ loop.index is even ? 'xl:flex-row-reverse' : 'xl:flex-row' }}">

            <div class="relative flex-none hidden group lg:w-1/2 inview-item xl:block">
                <div class="absolute rounded-md -inset-2 bg-wood-smoke-800/70 blur-xl lg:block"></div>
                <figure class="overflow-hidden border border-blue-700 rounded-md aspect-w-4 aspect-h-3">
                    {{ images.imageObject({
                        src: image.url,
                        alt: image.alt,
                        class: 'w-full h-full',
                    })}}
                </figure>
            </div>

            <div class="space-y-10 xl:w-1/2 inview-item">
                <!-- content -->
                <div class="space-y-4 xl:max-w-2xl solution-hero__content">
                        <!-- Badge -->
                    <div class="inline-flex solution-hero__accent">
                        {{ badges.accentBadge({
                            title: accent,
                        })}}
                    </div>
                    
                    <!-- Heading -->
                    <hgroup class="space-y-2 solution-hero__headings">
                        {{ headings.headingTwo({
                            title: title,
                            size: 'fluid-text-3xl',
                        })}}
                        {{ headings.headingThree({
                            title: subTitle,
                            size: 'fluid-text-base',
                            color: 'text-dodger-blue-500',
                        })}}
                    </hgroup>

                    {# small image #}
                    <div class="relative flex-none group inview-item xl:hidden">
                        <div class="absolute rounded-md -inset-2 bg-wood-smoke-800/70 blur-xl lg:block"></div>
                        <figure class="overflow-hidden border border-blue-700 rounded-md aspect-w-16 aspect-h-9">
                            {{ images.imageObject({
                                src: image.url,
                                alt: image.alt,
                                class: 'w-full h-full',
                            })}}
                        </figure>
                    </div>

                     <!-- Entry -->
                    <div class="pt-8 solution-hero__entry inview-item lg:pt-0">
                        <div class="prose prose-lg sm:prose-xl xl:prose-base prose-invert max-w-none prose-ul:list-image-[url('data:image/svg+xml;base64,')]">
                            {{ entry }}
                        </div>
                    </div>
                    
                   
                </div>
                <!-- END Heading -->
                
            </div>
        </div>
    {% endblock %}

{% endembed %}